            <ControlTemplate x:Key="HDNavigationPageTemplate">
                <StackLayout>
                    <Label Text="Header Content" FontSize="24" />
                    <ContentPresenter />
                </StackLayout>
            </ControlTemplate>

            <Color x:Key="HDRed">#9B1C47</Color>
            <Color x:Key="HDGrey">#563F5A</Color>
