                <Setter Property="TextColor" Value="{StaticResource HDRed}" />
                <Setter Property="FontFamily" Value="{DynamicResource LinuxLibertine}" />
            </Style>

            <Style TargetType="Label"  x:Key="tableheader">
                <Setter Property="FontSize" Value="12" />
