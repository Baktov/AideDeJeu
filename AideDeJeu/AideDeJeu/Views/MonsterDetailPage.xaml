            <!--<StackLayout Orientation="Horizontal">
                <Label Text="Portée :" LineBreakMode="NoWrap" Style="{StaticResource Key=contentbold}" />
                <Label Text="{Binding Item.Range}" Style="{StaticResource Key=content}" />
            </StackLayout>-->

