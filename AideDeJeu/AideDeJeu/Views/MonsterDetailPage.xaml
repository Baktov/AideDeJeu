                <Label Text="Durée d'incantation :" LineBreakMode="NoWrap" Style="{StaticResource Key=contentbold}" />
                <Label Text="{Binding Item.CastingTime}" Style="{StaticResource Key=content}" />
            </StackLayout>-->


